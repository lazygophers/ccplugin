{
  "name": "style-pastel",
  "version": "0.0.122",
  "description": "柔和粉彩设计风格插件 - 提供柔和 UI 设计规范、实现指南和最佳实践。包括淡雅色彩、温柔质感和舒适感的完整设计系统",
  "author": {
    "name": "lazygophers",
    "email": "admin@lazygophers.dev"
  },
  "homepage": "https://github.com/lazygophers/ccplugin/tree/master/plugins/style/style-pastel",
  "repository": "https://github.com/lazygophers/ccplugin/tree/master/plugins/style/style-pastel",
  "license": "MIT",
  "keywords": [
    "pastel",
    "soft-colors",
    "gentle",
    "cute",
    "design-system",
    "calm",
    "modern-ui",
    "web-design",
    "2025-trend"
  ],
  "skills": "./skills/",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PLUGIN_NAME=style-pastel uv run --directory ${CLAUDE_PLUGIN_ROOT} ./scripts/main.py hooks"
          }
        ]
      }
    ]
  }
}
