{
  "name": "style-gradient",
  "version": "0.0.114",
  "description": "渐变艺术设计风格插件 - 提供渐变 UI 设计规范、实现指南和最佳实践。包括流动渐变、色彩过渡和艺术表现的完整设计系统",
  "author": {
    "name": "lazygophers",
    "email": "admin@lazygophers.dev"
  },
  "homepage": "https://github.com/lazygophers/ccplugin/tree/master/plugins/style/style-gradient",
  "repository": "https://github.com/lazygophers/ccplugin/tree/master/plugins/style/style-gradient",
  "license": "MIT",
  "keywords": [
    "gradient",
    "color-transition",
    "artistic",
    "flowing",
    "design-system",
    "vibrant",
    "modern-ui",
    "web-design",
    "2025-trend"
  ],
  "skills": "./skills/",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PLUGIN_NAME=style-gradient uv run --directory ${CLAUDE_PLUGIN_ROOT} ./scripts/main.py hooks"
          }
        ]
      }
    ]
  }
}
