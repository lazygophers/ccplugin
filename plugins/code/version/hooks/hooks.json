{
  "description": "版本管理插件 Hooks - 自动管理项目版本号",
  "hooks": {
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/version.py bump || true",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
