{
  "name": "cpp",
  "version": "0.0.137",
  "description": "C++ 开发插件 - 提供 C++17/23 开发规范、最佳实践和代码智能支持。包括现代 C++ 标准、STL、内存管理、模板元编程和并发编程指导",
  "author": {
    "name": "lazygophers",
    "email": "admin@lazygophers.dev",
    "url": "https://github.com/lazygophers"
  },
  "homepage": "https://github.com/lazygophers/ccplugin/tree/master/plugins/languages/cpp",
  "repository": "https://github.com/lazygophers/ccplugin/tree/master/plugins/languages/cpp",
  "license": "AGPL-3.0-or-later",
  "keywords": [
    "cpp",
    "c++",
    "c++17",
    "c++20",
    "c++23",
    "development",
    "coding-style",
    "best-practices",
    "lsp",
    "clangd"
  ],
  "agents": [
    "./agents/dev.md",
    "./agents/test.md",
    "./agents/debug.md",
    "./agents/perf.md"
  ],
  "skills": [
    "./skills/core/SKILL.md",
    "./skills/memory/SKILL.md",
    "./skills/concurrency/SKILL.md",
    "./skills/template/SKILL.md",
    "./skills/performance/SKILL.md",
    "./skills/tooling/SKILL.md"
  ],
  "lspServers": "./.lsp.json",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PLUGIN_NAME=cpp uv run --directory ${CLAUDE_PLUGIN_ROOT} ./scripts/main.py hooks"
          }
        ]
      }
    ]
  }
}
