{
  "description": "任务管理插件 Hooks - 自动初始化任务数据库和环境",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/task.py init --silent || true"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/task.py init --silent || true"
          }
        ]
      }
    ]
  }
}
