{
  "description": "任务管理插件 Hooks - 基于文件系统的任务管理自动化",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "PLUGIN_NAME=task uv run ${CLAUDE_PLUGIN_ROOT}/scripts/init_task_system.py || true",
            "once": true,
            "timeout": 5
          }
        ]
      }
    ]
  }
}
